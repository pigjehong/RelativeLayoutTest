<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_base"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="lunatic_hai"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_base"
        android:layout_alignTop="@+id/btn_base"
        android:text="miro"
        />
    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_1"
        android:layout_toLeftOf="@+id/btn_base"
        android:text="ryujehong"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_base"
        android:layout_below="@+id/btn_2"
        android:text="eska"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_base"
        android:layout_alignLeft="@+id/btn_base"
        android:text="whoru"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_base"
        android:layout_alignRight="@+id/btn_base"
        android:text="tobi"
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_base"
        android:layout_toRightOf="@+id/btn_base"
        android:text="zunba"
        />
</RelativeLayout>
